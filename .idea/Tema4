public class Main {
    public static void main(String[] args) {

        //Apartado 1, uso del If
        int numeroIf = -2;
        if(numeroIf == 0){
            System.out.println("Es cero");
        }
        else if (numeroIf<0){
            System.out.println("Es negativo");
        }
        else if(numeroIf>0){
            System.out.println("Es positivo");
        }

        //Apartado 2, uso del while
        int numeroWhile = -5;
        while (numeroWhile<3){
            System.out.println(numeroWhile);
            numeroWhile+=1;
        }

        //Apartado 3, uso del Do While
        do{
            System.out.println("Ejecucion del Do While");
        }while(numeroWhile<3);
        //Apartado 4, uso del For
        for (int numeroFor = 0; numeroFor <= 3; numeroFor+=1){
            System.out.println(numeroFor);
        }

        //Apartado 5, uso del Switch
        var estacion = "otoño";
        switch (estacion){
            case "invierno":
                System.out.println("Es invierno");
                break;
            case "verano":
                System.out.println("Es verano");
                break;
            case "otoño":
                System.out.println("Es otoño");
                break;
            case "primavera":
                System.out.println("Es privamera");
                break;
            default:
                System.out.println("Error en la variable de entrada");
        }
    }
}
